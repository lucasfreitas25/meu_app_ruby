<% content_for :title, "Registro" %>

<body class="bg-sky-200 text-gray-900 flex justify-center items-center h-screen m-0">
  <main class="bg-sky-800 text-gray-900 rounded-lg flex flex-col items-center p-[40px] w-96">
    <section class="registro-header">
      <h1 class="text-white text-2xl font-bold">REGISTRO</h1>
    </section>

    <section class="registro-form">
      <%= form_with model: @user, url: users_path, method: :post, html: { class: "flex flex-col items-center gap-6 mt-4 w-[250px] p-[25px]" } do |f| %>
        <label for="user_name" class="text-white self-start">Nome</label>
        <%= f.text_field :name, placeholder: "Nome", class: "border-b border-gray-400 text-white p-[10px] bg-sky-800 focus:outline-none w-full" %>

        <label for="user_email" class="text-white self-start">Email</label>
        <%= f.email_field :email, placeholder: "Email", class: "border-b border-gray-400 text-white p-[10px] bg-sky-800 focus:outline-none w-full" %>

        <label for="user_password" class="text-white self-start">Senha</label>
        <%= f.password_field :password, placeholder: "Senha", class: "border-b border-gray-400 text-white p-[10px] bg-sky-800 focus:outline-none w-full" %>

        <%= f.submit "Registrar", class: "rounded-lg bg-fuchsia-950 text-white cursor-pointer hover:bg-white hover:text-fuchsia-950 transition p-[10px]" %>
      <% end %>
    </section>
    <section class="text-white text-center mt-4">
      <p>JÃ¡ tem uma conta? <%= link_to "Voltar Login", login_path, class: "text-fuchsia-300 font-bold no-underline hover:underline" %></p>
    </section>
  </main>
</body>
